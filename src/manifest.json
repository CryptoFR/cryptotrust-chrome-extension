{
  "name": "Mallory by CryptoFR ðŸš€",
  "description": "Mallory is a Chrome extension that lets you know if you can trust the website you are currently
   browsing. Websites are referenced by the community at https://github.com/CryptoFR/crypto-scams-fr.",
  "version": "0.1",
  "permissions": [
		"tabs",
		"contextMenus",
    "storage",
		"https://*.cryptofr.com/*",
		"https://api.cryptofr.com/*",
    "https://raw.github.com/CryptoFR/*"
	],
  "browser_action": {
    "default_title": "Mallory by CryptoFR ðŸš€",
    "default_icon": "img/pngx32.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "exclude_matches":  [
        "http://*.cryptofr.com/*"
      ],
      "js": [
        "js/mallory.js"
      ],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    "scam.html"
  ],
  "manifest_version": 2
}
