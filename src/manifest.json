{
  "name": "Cryptotrust by CryptoFR ðŸš€",
  "description": "Cryptotrust is a Chrome extension that lets you know if you can trust the website you are currently browsing. Websites are referenced by the community at https://github.com/CryptoFR/crypto-scams-fr.",
  "version": "0.1",
  "icons": {
    "16": "img/icons/16.png",
    "32": "img/icons/32.png",
    "48": "img/icons/48.png",
    "64": "img/icons/64.png",
    "128": "img/icons/128.png"
  },
  "permissions": [
		"tabs",
		"contextMenus",
        "storage",
		"https://*.cryptofr.com/*",
		"https://api.cryptofr.com/*",
        "https://raw.github.com/CryptoFR/*"
	],
  "background": {
    "scripts": ["js/background.js"]
  },
  "browser_action": {
    "default_title": "Cryptotrust by CryptoFR ðŸš€",
    "default_icon": "img/icons/32w/default.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "exclude_matches":  [
        "https://cryptofr.com/*",
        "https://*.cryptofr.com/*",
        "https://*.cryptotrust.io/*",
        "https://cryptotrust.io/*"
      ],
      "js": [
        "js/verify.js"
      ],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    "css/popup.css",
    "css/injected.css",
    "img/site-logo.png"
  ],
  "manifest_version": 2
}
